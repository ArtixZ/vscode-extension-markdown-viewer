{
    "name": "enhanced-md-editor",
    "displayName": "Enhanced Markdown Editor & Viewer",
    "description": "Enhanced markdown editor with split-screen preview, syntax highlighting, and resizable panels",
    "version": "0.0.1",
    "publisher": "MarkdownViewer",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "markdown",
        ".md",
        "readme",
        "preview",
        "editor",
        "viewer",
        "syntax highlighting"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ArtixZ/vscode-extension-markdown-viewer"
    },
    "homepage": "https://github.com/ArtixZ/vscode-extension-markdown-viewer#readme",
    "bugs": {
        "url": "https://github.com/ArtixZ/vscode-extension-markdown-viewer/issues"
    },
    "license": "MIT",
    "icon": "icon.png",
    "activationEvents": [
        "onLanguage:markdown",
        "onCommand:markdownViewer.openPreview",
        "onCommand:markdownViewer.toggleMode",
        "onCustomEditor:markdownViewer.preview"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "markdownViewer.openPreview",
                "title": "Markdown Viewer: Open Preview",
                "icon": "$(preview)"
            },
            {
                "command": "markdownViewer.toggleMode",
                "title": "Markdown Viewer: Toggle Preview/Edit Mode",
                "icon": "$(split-horizontal)"
            },
            {
                "command": "markdownViewer.openPreviewFromExplorer",
                "title": "Open with Markdown Viewer"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "markdownViewer.openPreview",
                    "when": "resourceExtname == .md",
                    "group": "navigation"
                },
                {
                    "command": "markdownViewer.toggleMode",
                    "when": "resourceExtname == .md",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "markdownViewer.openPreviewFromExplorer",
                    "when": "resourceExtname == .md",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "markdownViewer.openPreview",
                    "when": "editorLangId == markdown"
                },
                {
                    "command": "markdownViewer.toggleMode",
                    "when": "editorLangId == markdown"
                },
                {
                    "command": "markdownViewer.openPreviewFromExplorer",
                    "when": "false"
                }
            ]
        },
        "customEditors": [
            {
                "viewType": "markdownViewer.preview",
                "displayName": "Markdown Preview",
                "selector": [
                    {
                        "filenamePattern": "*.md"
                    }
                ],
                "priority": "option"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/marked": "^5.0.2",
        "@types/node": "16.x",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "copy-webpack-plugin": "^13.0.0",
        "eslint": "^8.28.0",
        "ts-loader": "^9.5.2",
        "typescript": "^4.9.4",
        "webpack": "^5.99.9",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@highlightjs/cdn-assets": "^11.11.1",
        "marked": "^4.2.5"
    }
}
